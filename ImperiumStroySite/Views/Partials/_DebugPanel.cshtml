                                {
                                    <a href="/umbraco#/content/content/edit/@Model.Id"  target="_blank" class="tag">
                                        <p>
                                            <strong>Keywords:</strong> @keywords.SeoKeywords
                                        </p>
                                        <span class="action">Изменить</span>
                                    </a>
                                }
                            }
