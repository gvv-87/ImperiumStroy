@inherits Umbraco.Web.Mvc.UmbracoViewPage<About_Page>
@{
    Layout = "_Layout.cshtml";
}

@{ 
    var homePage              = Model.AncestorOrSelf<Home_Page>();
    var navigation            = homePage.VisibleChildren();
    var urlОКомпании          = navigation.Where(x => x is About_Page).First().Url;
    var urlServiceList        = navigation.Where(x => x is Service_List_Page).First().Url;
    var urlКонтакты           = navigation.Where(x => x is Contacts_Page).First().Url;
    var urlServiceCategory    = navigation.Where(x => x is Service_Category_Page).First().Url;
    var urlВыполненныеПроекты = navigation.Where(x => x is Projects_Page).First().Url;

    var abPage = navigation.Where(x => x is About_Page).First();

    var urlФонЗаголовка = @Model.HeaderBackgroundImage.ToSafeImage(width:1920).Url;    
    var urlНачальника   = @Model.CompanyExecutivePicture.ToSafeImage().Url;
    var urlПрораба      = @Model.ConstructionManagerPicture.ToSafeImage().Url;

    var urlФото_1        = @Model.Photo_1.ToSafeImage().Url;
    var urlФото_2        = @Model.Photo_2.ToSafeImage().Url;
    var urlФото_3        = @Model.Photo_1.ToSafeImage().Url;
    var urlФото_4        = @Model.Photo_2.ToSafeImage().Url;
    var urlФото_5        = @Model.Photo_1.ToSafeImage().Url;
    var urlФото_6        = @Model.Photo_2.ToSafeImage().Url;

    var urlPhoto_Callback_bg        = @Model.Photo_Callback_bg.ToSafeImage().Url;
}




<main>
